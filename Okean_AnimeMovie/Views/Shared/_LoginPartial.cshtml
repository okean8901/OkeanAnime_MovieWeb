@if (User.Identity?.IsAuthenticated == true)
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center fw-medium" href="#" role="button" data-bs-toggle="dropdown">
                <div class="user-avatar me-2">
                    <i class="bi bi-person-circle text-warning"></i>
                </div>
                <span>@User.Identity.Name</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg">
                <li class="dropdown-header">
                    <div class="d-flex align-items-center">
                        <div class="user-avatar me-2">
                            <i class="bi bi-person-circle text-primary display-6"></i>
                        </div>
                        <div>
                            <div class="fw-bold">@User.Identity.Name</div>
                            <small class="text-muted">@User.FindFirst("FirstName")?.Value @User.FindFirst("LastName")?.Value</small>
                        </div>
                    </div>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item d-flex align-items-center" href="#">
                        <i class="bi bi-heart me-2 text-danger"></i>My Favorites
                    </a>
                </li>
                <li>
                    <a class="dropdown-item d-flex align-items-center" href="#">
                        <i class="bi bi-gear me-2 text-secondary"></i>Profile Settings
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <i class="bi bi-shield me-2 text-warning"></i>Admin Panel
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <i class="bi bi-people me-2 text-info"></i>User Management
                        </a>
                    </li>
                }
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="dropdown-item d-flex align-items-center text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link fw-medium" asp-controller="Account" asp-action="Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>Sign In
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-warning text-dark fw-medium px-3 py-2 ms-2" asp-controller="Account" asp-action="Register">
                <i class="bi bi-person-plus me-1"></i>Join Now
            </a>
        </li>
    </ul>
}

<style>
    .user-avatar {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
    }
    
    .dropdown-menu {
        border-radius: 15px;
        padding: 0.5rem 0;
        min-width: 250px;
        margin-top: 0.5rem;
    }
    
    .dropdown-header {
        padding: 0.75rem 1rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 15px 15px 0 0;
        margin: -0.5rem -0.5rem 0.5rem -0.5rem;
    }
    
    .dropdown-item {
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
        border-radius: 8px;
        margin: 0 0.5rem;
        width: calc(100% - 1rem);
    }
    
    .dropdown-item:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        transform: translateX(5px);
    }
    
    .dropdown-item.text-danger:hover {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
    }
    
    .dropdown-divider {
        margin: 0.5rem 1rem;
        border-color: #e9ecef;
    }
    
    .btn-warning {
        border-radius: 25px;
        transition: all 0.3s ease;
    }
    
    .btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
    }
    
    @@media (max-width: 768px) {
        .dropdown-menu {
            min-width: 200px;
        }
        
        .btn-warning {
            padding: 0.5rem 1rem !important;
            font-size: 0.875rem;
        }
    }
</style>
