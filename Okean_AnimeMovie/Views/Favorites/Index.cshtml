@model IEnumerable<Okean_AnimeMovie.Core.Entities.Anime>

@{
    ViewData["Title"] = "My Favorites";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h3 mb-0"><i class="bi bi-heart text-danger me-2"></i>My Favorites</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-heartbreak display-1 text-muted"></i>
            <h5 class="mt-3 text-muted">Your favorites list is empty</h5>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var anime in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 220px;">
                            @if (!string.IsNullOrEmpty(anime.Poster))
                            {
                                <img src="@anime.Poster" class="img-fluid" alt="@anime.Title" style="max-height: 100%;">
                            }
                            else
                            {
                                <i class="bi bi-image text-light display-4"></i>
                            }
                        </div>
                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="@anime.Title">@anime.Title</h6>
                            <small class="text-muted">@anime.ReleaseYear â€¢ @anime.Type</small>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between">
                                <a asp-controller="Anime" asp-action="Details" asp-route-id="@anime.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <form asp-action="Remove" method="post" class="d-inline">
                                    <input type="hidden" name="animeId" value="@anime.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
