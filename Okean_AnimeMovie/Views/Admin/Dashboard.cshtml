@model Okean_AnimeMovie.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Bảng quản trị";
}

<div class="container py-4">
    <h2 class="mb-4">Bảng quản trị</h2>
    <div class="row g-3">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body text-center">
                    <div class="fs-4 fw-bold">@Model.TotalUsers</div>
                    <div class="text-muted">Người dùng</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body text-center">
                    <div class="fs-4 fw-bold">@Model.TotalAnime</div>
                    <div class="text-muted">Anime</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body text-center">
                    <div class="fs-4 fw-bold">@Model.TotalEpisodes</div>
                    <div class="text-muted">Tập phim</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body text-center">
                    <div class="fs-4 fw-bold">@Model.TotalComments</div>
                    <div class="text-muted">Bình luận</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mt-4">
        <div class="card-body row g-3">
            <div class="col-md-4 d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-bold">Tổng lượt yêu thích</div>
                    <div class="fs-5">@Model.TotalFavorites</div>
                </div>
                <a asp-action="Users" class="btn btn-primary"><i class="bi bi-people me-2"></i>Quản lý người dùng</a>
            </div>
            <div class="col-md-8 d-flex justify-content-end align-items-center gap-2">
                <a asp-controller="Anime" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-collection-play me-2"></i>Quản lý Anime
                </a>
                <a asp-controller="Anime" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-2"></i>Thêm Anime
                </a>
            </div>
        </div>
    </div>
</div>
