@model IEnumerable<Okean_AnimeMovie.Controllers.AdminUserRow>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Quản lý người dùng</h2>
        <a asp-action="Dashboard" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-2"></i>Quay lại</a>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Email</th>
                        <th>Họ</th>
                        <th>Tên</th>
                        <th>Vai trò</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.UserName</td>
                            <td>@u.Email</td>
                            <td>@u.LastName</td>
                            <td>@u.FirstName</td>
                            <td>
                                @if (u.IsAdmin)
                                {
                                    <span class="badge bg-warning text-dark">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">User</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (!u.IsAdmin)
                                {
                                    <form asp-action="Promote" method="post" class="d-inline">
                                        <input type="hidden" name="userId" value="@u.Id" />
                                        <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-shield-plus me-1"></i>Thăng Admin</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Demote" method="post" class="d-inline">
                                        <input type="hidden" name="userId" value="@u.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-shield-x me-1"></i>Hạ quyền</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
