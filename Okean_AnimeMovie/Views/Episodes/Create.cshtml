@model Okean_AnimeMovie.Core.Entities.Episode
@{
    var anime = ViewBag.Anime as Okean_AnimeMovie.Core.Entities.Anime;
    ViewData["Title"] = $"Add Episode - {anime?.Title}";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Add Episode - @anime?.Title</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="AnimeId" />
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="EpisodeNumber" class="form-label">Episode Number</label>
                                <input asp-for="EpisodeNumber" type="number" class="form-control" />
                                <span asp-validation-for="EpisodeNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-8">
                                <label asp-for="Title" class="form-label">Title</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Thumbnail" class="form-label">Thumbnail URL</label>
                                <input asp-for="Thumbnail" class="form-control" />
                                <span asp-validation-for="Thumbnail" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="VideoType" class="form-label">Video Type</label>
                                <select asp-for="VideoType" class="form-select">
                                    <option>Embed</option>
                                    <option>HLS</option>
                                    <option>Direct</option>
                                </select>
                                <span asp-validation-for="VideoType" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="VideoUrl" class="form-label">Video URL</label>
                                <input asp-for="VideoUrl" class="form-control" placeholder="e.g., https://... or https://.../playlist.m3u8" />
                                <span asp-validation-for="VideoUrl" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Duration" class="form-label">Duration (seconds)</label>
                                <input asp-for="Duration" type="number" class="form-control" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a class="btn btn-outline-secondary" asp-action="Index" asp-route-animeId="@anime?.Id">Back</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
