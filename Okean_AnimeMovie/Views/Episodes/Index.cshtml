@model IEnumerable<Okean_AnimeMovie.Core.Entities.Episode>
@{
    var anime = ViewBag.Anime as Okean_AnimeMovie.Core.Entities.Anime;
    ViewData["Title"] = $"Episodes - {anime?.Title}";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0"><i class="bi bi-collection-play me-2"></i>Episodes - @anime?.Title</h2>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="Anime" asp-action="Details" asp-route-id="@anime?.Id">Back</a>
            <a class="btn btn-primary" asp-action="Create" asp-route-animeId="@anime?.Id"><i class="bi bi-plus-circle me-2"></i>Add Episode</a>
            <a class="btn btn-success" asp-action="BulkAdd" asp-route-animeId="@anime?.Id"><i class="bi bi-plus-square-dotted me-2"></i>Bulk Add</a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 100px;">Episode</th>
                        <th>Title</th>
                        <th style="width: 140px;">Type</th>
                        <th style="width: 200px;" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>Ep. @e.EpisodeNumber</td>
                        <td>@e.Title</td>
                        <td>@e.VideoType</td>
                        <td class="text-end">
                            <form class="d-inline" asp-action="MoveUp" asp-route-id="@e.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-secondary" title="Move up"><i class="bi bi-arrow-up"></i></button>
                            </form>
                            <form class="d-inline" asp-action="MoveDown" asp-route-id="@e.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-secondary" title="Move down"><i class="bi bi-arrow-down"></i></button>
                            </form>
                            <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@e.Id"><i class="bi bi-pencil"></i></a>
                            <form class="d-inline" asp-action="Delete" asp-route-id="@e.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete episode @e.EpisodeNumber?');"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
