@model Okean_AnimeMovie.Controllers.ProfileSettingsViewModel
@{
    ViewData["Title"] = "Cài đặt hồ sơ";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-transparent border-0 p-4">
                    <h3 class="mb-0">Cài đặt hồ sơ</h3>
                    <p class="text-muted mb-0">Cập nhật thông tin tài khoản của bạn</p>
                </div>
                <div class="card-body p-4">
                    @if (TempData["ProfileUpdated"] != null)
                    {
                        <div class="alert alert-success">Cập nhật hồ sơ thành công.</div>
                    }
                    <form asp-action="Settings" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Họ</label>
                                <input asp-for="LastName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Tên</label>
                                <input asp-for="FirstName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Tên đăng nhập</label>
                                <input asp-for="UserName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label class="form-label">Ảnh đại diện (URL)</label>
                                <input asp-for="Avatar" class="form-control" placeholder="https://..." />
                                <small class="text-muted">Dán URL ảnh của bạn. Nếu để trống, hệ thống sẽ dùng ảnh mặc định.</small>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
